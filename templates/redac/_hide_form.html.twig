<form method="post" class="text-center" action="{{ path('app_redac_post_hide', {'id': post.id}) }}">
    <input type="hidden" name="_token" value="{{ csrf_token('hide' ~ post.id) }}">
    <button class="btn btn-danger text-center" onclick="return confirm('Êtes-vous sûre de vouloir cacher ce Post ? Plus personne ne pourra le voir !');"><i class="fas fa-eye-slash"></i></button>
</form>
