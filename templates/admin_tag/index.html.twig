{% extends 'layouts/admin.html.twig' %}

{% block title %}Tag Index{% endblock %}
{% block hero %}
    {% embed "includes/hero.html.twig" %}
        {% block bread %}
                <li class="breadcrumb-item"><a href="{{ path('app_admin_tag_index') }}">Admin</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_admin_tag_index') }}">CRUD</a></li>
                <li class="breadcrumb-item active text-primary">Tags</li>
        {% endblock %}
    {% endembed %}
{% endblock %}
{% block body %}
    <h1>Tag index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>TagName</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>{{ tag.id }}</td>
                <td>{{ tag.tagName }}</td>
                <td>
                    <a href="{{ path('app_admin_tag_show', {'id': tag.id}) }}">show</a>
                    <a href="{{ path('app_admin_tag_edit', {'id': tag.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_tag_new') }}">Create new</a>
{% endblock %}
