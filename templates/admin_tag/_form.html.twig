        <button class="btn btn-danger" onclick="this.form.action.value='delete';return confirm('Êtes-vous sûre de vouloir supprimer ce Tag ?');"><i class="fas fa-trash"></i></button>    
    {% endif %}
{{ form_end(form) }}
