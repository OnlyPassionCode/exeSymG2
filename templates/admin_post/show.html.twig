{% extends 'layouts/admin.html.twig' %}

{% block title %}Post{% endblock %}
{% block hero %}
    {% embed "includes/hero.html.twig" %}
        {% block bread %}
                <li class="breadcrumb-item"><a href="{{ path('app_admin_post_index') }}">Admin</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_admin_post_index') }}">CRUD</a></li>
                <li class="breadcrumb-item active text-primary">Show</li>
        {% endblock %}
    {% endembed %}
{% endblock %}
{% block body %}
    <h1 class="text-primary my-5">{{ post.postTitle }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>PostTitle</th>
                <td>{{ post }}</td>
            </tr>
            <tr>
                <th>PostDescription</th>
                <td>{{ post.postDescription }}</td>
            </tr>
            <tr>
                <th>PostDateCreated</th>
                <td>{{ post.postDateCreated ? post.postDateCreated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>PostDatePublished</th>
                <td>{{ post.postDatePublished ? post.postDatePublished|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>PostPublished</th>
                <td>{{ post.postPublished ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-block my-5">
        <a class="btn btn-primary" href="{{ path('app_admin_post_edit', {'id': post.id}) }}">Editer</a>
        <a class="btn btn-light" href="{{ path('app_admin_post_index') }}">Retour Ã  la liste</a>
    </div>
{% endblock %}
