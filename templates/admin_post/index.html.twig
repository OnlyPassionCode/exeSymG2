{% extends 'layouts/admin.html.twig' %}

{% block title %}Post index{% endblock %}
{% block hero %}
    {% embed "includes/hero.html.twig" %}
        {% block bread %}
                <li class="breadcrumb-item"><a href="{{ path('app_admin_post_index') }}">Admin</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_admin_post_index') }}">CRUD</a></li>
                <li class="breadcrumb-item active text-primary">Posts</li>
        {% endblock %}
    {% endembed %}
{% endblock %}
{% block body %}
    <h1 class="text-primary my-5">Liste de tout les posts</h1>

    <table class="table table-striped">
        <thead class="bg-dark text-white text-center">
            <tr>
                <th>Id</th>
                <th>PostTitle</th>
                <th>PostDescription</th>
                <th>PostDateCreated</th>
                <th>PostDatePublished</th>
                <th>PostPublished</th>
                <th colspan="2">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post }}</td>
                <td>{{ post.postDescription|slice(0,200) ~ '...' }}</td>
                <td>{{ post.postDateCreated ? post.postDateCreated|date('d-m-Y H:i:s') : '' }}</td>
                <td>{{ post.postDatePublished ? post.postDatePublished|date('d-m-Y H:i:s') : '' }}</td>
                <td class="text-center">
                    <img width="25" height="25" src="{{asset(post.postPublished ? 'img/checkbox-svgrepo-com.svg' : 'img/checkbox-undeterminate-filled-svgrepo-com.svg')}}" alt="">
                </td>
                <td>
                    <a class="btn btn-light" href="{{ path('app_admin_post_show', {'id': post.id}) }}">Voir</a>
                </td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_admin_post_edit', {'id': post.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun post n'a encore été crée.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="mb-5 btn btn-primary" href="{{ path('app_admin_post_new') }}">Créer un nouveau</a>
{% endblock %}
